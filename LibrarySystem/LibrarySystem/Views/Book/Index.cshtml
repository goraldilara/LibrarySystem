@using LibrarySystem.Models.ENTITY;
@model List<BOOK>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Book Page</h2>

@using (Html.BeginForm("Index", "Book", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>"What Are You Looking For?"</b> @Html.TextBox("p")
        <input type="submit" value="Search" />
    </div>

}

<table class="table table-bordered">

    <tr>
        <th>Book ID</th>
        <th>Book Name</th>
        <th>Book Author</th>
        <th>Book Category</th>
        <th>Book Page</th>
        <th>Book Year</th>
        <th>Book Publisher</th>

        <th>Book Price</th>
        <th>Book Stocks</th>
        <th>Delete Book</th>
        <th>Update Book</th>



    </tr>


    @foreach (var book in Model)
    {
        <tr>

            <td>@book.Book_ID</td>
            <td>@book.Book_Name</td>
            <td>@book.AUTHORS.Author_Name &nbsp @book.AUTHORS.Author_Lastname</td>
            <td>@book.CATEGORY.Category_Name</td>
            <td>@book.Book_Page</td>
            <td>@book.Book_Year</td>
            <td>@book.Book_Publisher</td>
            <td>@book.Book_Price</td>
            <td>@book.Book_Stocks</td>

            <td>
                <a href="/Book/DeleteBook/@book.Book_ID" class="btn btn-danger">Delete Book</a>
            </td>
            <td>
                <a href="/Book/GetBook/@book.Book_ID" class="btn btn-success">Update Book</a>
            </td>
        </tr>
    }

</table>

<a href="/Book/AddBook" class="btn btn-primary">Add New Book</a>
